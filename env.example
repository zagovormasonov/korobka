# База данных PostgreSQL
POSTGRESQL_HOST=your_host
POSTGRESQL_PORT=5432
POSTGRESQL_USER=your_username
POSTGRESQL_PASSWORD=your_password
POSTGRESQL_DBNAME=your_database_name

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Тинькофф платежи
TINKOFF_TERMINAL_KEY=your_terminal_key
TINKOFF_PASSWORD=your_password

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Порт сервера
PORT=5000

# URL-адреса фронтенда и бэкенда
# Например, для Timeweb:
# FRONTEND_URL=https://your-domain.ru
# BACKEND_URL=https://api.your-domain.ru
FRONTEND_URL=
BACKEND_URL=

# EmailJS настройки
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id

# Настройки прокси для Gemini API (ОБЯЗАТЕЛЬНО для РФ)
PROXY_HOST=your_proxy_host
PROXY_PORT=your_proxy_port
PROXY_PROTOCOL=http
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password
# Отключить прокси для отладки (true/false)
DISABLE_PROXY=false