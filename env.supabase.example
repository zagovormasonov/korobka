# Supabase Environment Variables
# Скопируйте этот файл и настройте переменные в панели Render.com

# Supabase Database (замените PostgreSQL)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Database Connection (для прямого подключения)
POSTGRESQL_HOST=your_supabase_db_host
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=your_supabase_db_password
POSTGRESQL_DBNAME=postgres

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# Тинькофф платежи
TINKOFF_TERMINAL_KEY=your_terminal_key
TINKOFF_PASSWORD=your_password

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Порт сервера (Render автоматически устанавливает PORT)
PORT=10000

# URL-адреса (Render автоматически устанавливает RENDER_EXTERNAL_URL)
FRONTEND_URL=
BACKEND_URL=

# EmailJS настройки
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id

# Отключить прокси для render.com (обязательно)
DISABLE_PROXY=true
DISABLE_PDF=true

# Дополнительные настройки для render.com
NODE_ENV=production
